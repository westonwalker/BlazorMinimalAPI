@inherits XComponent
@code {
    [Parameter]
    public CreatePlatoForm Form { get; set; } = new();
}

<PageTitle>Agregar Platos</PageTitle>

<LayoutView Layout="typeof(MainLayout)">
    <h1 class="mb-8 text-3xl font-bold">

        <a preload 
           class="text-blue-500 hover:text-blue-600" 
           href="@Link.GetPathByName("Platos")"
        >
            Platos
        </a>

        <span class="text-blue-500 font-medium">/</span>
        Create
    </h1>

    <FlashMessages />

    <div class="max-w-3xl bg-white rounded-md shadow overflow-hidden">
        <form method="post" 
              action="@Link.GetPathByName("Platos.Store")" 
              autocomplete="off"
        >
            <div class="flex flex-wrap -mb-8 -mr-6 p-8">
                <div class="pb-8 pr-6 w-full lg:w-1/2 space-y-2">
                    <label class="" for="Name">Name</label>
                    <input type="text" 
                           id="Name" 
                           name="Name" 
                           value="@Form.Name" 
                           class="relative px-6 py-3 w-full rounded border-gray-300"
                    >
                    @if (HasError(() => Form.Name))
                    {
                        <div style="color: red;">@Message</div>
                    }
                </div>
                <div class="pb-8 pr-6 w-full lg:w-1/2 space-y-2">
                    <label for="Price">Price</label>
                    <input type="text" 
                           id="Price" 
                           name="Price" 
                           value="@Form.Price" 
                           class="relative px-6 py-3 w-full rounded border-gray-300"
                    >
                    @if (HasError(() => Form.Price))
                    {
                        <div style="color: red;">@Message</div>
                    }
                </div>
            </div>
            <div class="flex items-center justify-end px-8 py-4 bg-gray-50 border-t border-gray-100">
                <button class="px-4 py-2 font-medium rounded bg-blue-500 hover:bg-blue-600 text-white transition" 
                        type="submit"
                >
                    Create Plato
                </button>
            </div>
            <AntiforgeryToken />
        </form>
    </div>
</LayoutView>